# LLM API keys
OPENROUTER_API_KEY=your-openrouter-key-here

# Frontend configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

MAX_PARALLEL_FANOUT=5

version: "3.9"

services:
  backend:
    build:
      context: .  # Build from root directory
      dockerfile: ./backend/Dockerfile
    container_name: truthrouter-backend
    env_file:
      - ./.env               # your secrets (OPENROUTER_API_KEY, etc.)
    ports:
      - "8000:8000"
    command: uvicorn backend.main:app --host 0.0.0.0 --port 8000 --reload
    volumes:
      - ./backend:/app/backend       # hot reload in dev
      - ./requirements.txt:/app/requirements.txt
    networks:
      - trnet
    environment:
      - PYTHONPATH=/app

  frontend:
    build:
      context: ./frontend
    container_name: truthrouter-frontend
    env_file:
      - ./.env
    environment:
      # Next.js code can read this at build/runtime
      - NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
    ports:
      - "3000:3000"
    command: ["npm","run","dev"]
    volumes:
      - ./frontend:/usr/src/app
      - /usr/src/app/node_modules
    depends_on:
      - backend
    networks:
      - trnet

networks:
  trnet:
    driver: bridge